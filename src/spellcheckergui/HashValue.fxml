<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>


<AnchorPane id="AnchorPane" fx:id="rootPane" prefHeight="253.0" 
            prefWidth="411.0" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8.0.111" 
            fx:controller="spellcheckergui.HashValueController">
   <children>
      <ImageView fitHeight="284.0" fitWidth="411.0" 
                 pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Pictures/Help.jpg" />
         </image>
      </ImageView>
      <JFXTextField fx:id="keyTF" focusColor="#da3f3f" labelFloat="true"
                    layoutX="37.0" layoutY="47.0" promptText="Enter Word ">
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
      </JFXTextField>
      <JFXButton fx:id="getHashValueButton" layoutX="252.0" layoutY="47.0" 
                 onAction="#getHashValueButtonAction" prefHeight="34.0" 
                 prefWidth="139.0" style="-fx-border-color: black;" 
                 stylesheets="@Button.css" text="Get Hash Value">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </JFXButton>
      <TextFlow fx:id="textFlow" layoutX="28.0" layoutY="101.0"
                prefHeight="104.0" prefWidth="364.0" />
      <JFXButton fx:id="mainButton" layoutX="37.0" layoutY="212.0" 
                 onAction="#mainButtonAction" prefHeight="31.0" 
                 prefWidth="70.0" stylesheets="@Button.css" text="Main">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="createNewButtonAction" layoutX="130.0" layoutY="213.0" 
                 onAction="#createNewButtonAction" stylesheets="@Button.css" 
                 text="Create New">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="openExistingButton" layoutX="252.0" layoutY="213.0" 
                 onAction="#openExistingButtonAction" prefHeight="33.0" 
                 prefWidth="124.0" stylesheets="@Button.css" 
                 text="Open Existing">
         <font>
            <Font name="System Bold Italic" size="15.0" />
         </font>
      </JFXButton>
   </children>
</AnchorPane>
